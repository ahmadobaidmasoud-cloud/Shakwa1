# Database
DATABASE_URL=

# JWT & Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# App
PROJECT_NAME=Shakwa Multi-Tenant API
PROJECT_VERSION=1.0.0

# CORS - Comma-separated list of allowed origins
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=Shakwa
SMTP_FROM_EMAIL=noreply@shakwa.com

# Frontend URL (used in email links)
FRONTEND_URL=http://localhost:3000
# Speechmatics Configuration
# Get your API key from: https://console.speechmatics.com/api-keys
SPEECHMATICS_API_KEY=your-speechmatics-api-key-here